<h2 class="sub-header">Comic-Details</h2>
  <div class="table-responsive">
    <table class="table table-striped">
      <thead>
        <tr>
          <th><strong>Name:</strong></th>
          <th><%= @comic.name %></th>
        </tr>
        <tr>
          <th><strong>Price:</strong></th>
          <th><%= @comic.price %></th>
        </tr>  
        <tr>
          <th><strong>short_description:</strong></th>
          <th><%= @comic.short_description %></th>
        </tr>
        <tr>
          <th><strong>long_description:</strong></th>
          <th><%= @comic.long_description %></th>
        </tr>
        <tr>
          <th><strong>pages_count:</strong></th>
          <th><%= @comic.pages_count %></th>
        </tr>
        <tr>
          <th><strong>size:</strong></th>
          <th><%= @comic.size %></th>
        </tr>
        <tr>
          <th><strong>paid:</strong></th>
          <th><%= @comic.paid %></th>
        </tr>
        <tr>
          <th><strong>featured:</strong></th>
          <th><%= @comic.featured %></th>
        </tr>
        <tr>
          <th><strong>popular:</strong></th>
          <th><%= @comic.popular %></th>
        </tr>
        <tr>
          <th><strong>published:</strong></th>
          <th><%= @comic.published %></th>
        </tr>
      </thead>
    </table>
    <a  href="http://localhost:3000/comics/" >
    <button>Back</button>
    </a>
<%= button_to "create",  
    comic_comic_images_path(@comic.id), method: :get %>
   
   <h2 class="sub-header">Comic-Images</h2>
<div class="table-responsive">
    <table class="table table-striped">
      <thead>
  <% @comic_images.each do |comic_image| %>
    <tr>
      <td><%= image_tag comic_image.shared_image.original_image.thumb.to_s %></td>
      <td><%= comic_image.order %></td>
      <td><%= link_to 'Show', shared_image_path(comic_image.shared_image) %></td>
      <td><%= link_to 'Edit', edit_comic_comic_image_path(@comic.id, comic_image.id) %></td>
      <td><%= link_to 'Destroy', shared_image_path(comic_image.shared_image),
                             method: :delete,
                             data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
  </thead>
  </table>
  </div>


  </div>






